extends home
block issues
	.gridbox.gridmain
		ul(id="issues")
			li.postIssuePart
				form(method='POST', id="addMyOrg", action="/addmyorg")		
					.issuePart1D(style="display:inline-block;width:100%;padding-left:13px")
						div(style="float:left")
							h(style="font-weight:500;font-size:14pt") Make Organisation
						div(style="float:right")
							i(class="glyphicon glyphicon-plus" id="expandMakeOrg")			

					.main.issueBlock
						#nextBtn(style="display:none")
							div(style="margin-left:5px")
									input(type='text' id="orgName" name="orgName" placeholder="Name of organisation" required)
										
									input(type='text' id="orgAlert" name="orgAlert" placeholder="Criteria for Joining?")
									
									textarea(id="orgAbout" name="orgAbout" placeholder="About Organisation" required )
									
									div(style="width:100%;text-align:center;")
										input( value="Add" type="submit" name="orgSubmit" id="orgSubmit" style="max-width:71.77px;")

			if orgs
				for each in orgs
					li.issuePart
						.issuePart1D(style="display:inline-block;width:100%;padding-left:13px")
							div(style="float:left;")
								span(style='color:gray')
									a(href="/indorg/"+each._id id="linkProfile" style='font-weight:900;')  #{each.name}

								span(style='color:gray')
									br
									span(style="color:black;font-weight:500") UID : 
									| #{each.userId}
								
								p(id="date") #{each.dateMade}

							div(style="float:right" id="postDelBtn")
									form(method="post" action="/delorg/"+each._id)
										input#delete(value="Delete" type="submit" style="background-color:red;color:white!important;font-weight:500;border:1px solid red;border-radius:3px ")
						.main.issueBlock
							#prevBtn
								#likeBtns
									i(class="mega-octicon octicon-organization" style="color:gray")  
									p(style="font-weight:200!important;color:black") #{each.members.length+each.admin.length}
							#nextBtn
								#issueDesc(style="border-top:none") #{each.aboutUs}

	script.
		$('.glyphicon.glyphicon-remove#close_error').click(function(){
			$(this).parents('.alert.alert-danger#err').remove();
		});
		$('button#delete').click(function(e){
		    e.preventDefault();
		    $(this).find('i.fa').toggleClass('fa-thumbs-o-up fa-thumbs-up');
		    var indorg = $(this).parents('li.issuePart').find('a#linkProfile').attr('href');
		    indorg = indorg.substring(8);

		    var _url = "/delorg/"+indorg;
		    console.log(_url);
		    $.ajax({
			  url: _url,
			  cache: false,
			  method: 'GET',
			  success: function(data){
			    console.log("Post Deleted successfully");
			  }
			});

		});
		$('#expandMakeOrg').click(function(){
				$('#nextBtn').toggle();
				$(this).toggleClass('glyphicon-plus glyphicon-minus');
			})

