doctype html
html(lang='en')
  head
  title #{title} : Node Auth
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name="theme-color" content="#474b4F")
  meta(name="msapplication-navbutton-color" content="#474b4F")
  meta(name="apple-mobile-web-app-status-bar-style" content="#474b4F")
  link(rel='stylesheet' href='/stylesheets/style.css')
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  link(href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet")
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  script(type="text/javascript" src="http://twitter.github.io/bootstrap/assets/js/bootstrap-transition.js")
  script(type="text/javascript" src="http://twitter.github.io/bootstrap/assets/js/bootstrap-collapse.js")
  script(src='/javascripts/main.js')
  
  body
    nav.navbar.navbar-default(style="max-height:100px;margin-bottom:5px!important;")
      .container-fluid(style="max-height:inherit;")
        if !user
          .nav.navbar-nav(style="width:100%;margin:10.34px auto;text-align:center!important;float:center")
            span(style="padding:10px")
              a(href='/users/register')
                span.glyphicon.glyphicon-user(style="font-size:20px;color:white")
            span(style="padding:10px")
              a(href='/users/login')
                span.glyphicon.glyphicon-log-in(style="font-size:20px;color:white")
        if user
            .navbar-nav.nav(style="width:100%;text-align:center!important;float:right!important")
              li(id="control" style="margin-top:10px!important;margin-right:2rem !important")
                span(style="padding:10px;")
                  a(href='/users/logout')
                    span.glyphicon.glyphicon-log-out(style="font-size:20px;color:white")
                span(style="padding:10px;margin:10px 10px 10px 10px;")
                  a(href='/')
                    span.glyphicon.glyphicon-home(style="font-size:20px;color:white")
                span(style="padding:10px;")
                  a(href='#')
                    span.fa.fa-users(style="font-size:20px !important;margin:0px !important;padding:0px !important;width:30px !important;height:34px !important;color:white;" id="network")
                span(style="padding:10px;")
                  a(href='#')
                    span.glyphicon.glyphicon-bell(style="font-size:20px;color:white")
                
              li(id="serach" style="margin-right:2rem!important;width:30rem;float:center")
                span(style="padding:10px;")
                  input(type='text', placeholder='Search for organisations..' style="width:96%")    
              
    .container
      block content
    
