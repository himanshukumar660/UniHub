extends layout
block content
	.jumbotron.text-center.addIssueFormbackground
		.addIssueForm
			div(style="text-align:right!important")
				i.fa.fa-times-circle-o.closeAddIssueBox(style="font-size:30px!important")
			.card
			.card-body
				.form-header.myFormHeader
					h3(style="margin-top:10px")
						span.fa.fa-pencil
						|  Add issue

				form(method='POST', id="postIssueForm", action="/post")
					input(type='text' id="issueDept" name="issueDept" placeholder="Enter your department..." required)

					input(type='text' id="issueDescriptionTopic" name="issueDescriptionTopic" placeholder="Issue Topic..." required)
					
					textarea(id="issueDescriptionText" name="issueDescriptionText" placeholder="Write detailed description" required )
					
					div(style="display:inline-flex;width:auto")
						input(type="checkbox" id="anonymity" name="anonymity")
						span(style="color:black;width:150px") Be Anonymous
					
					div(style="text-align:center;padding:15px !important")
						input( value="Post" type="submit" name="issuePost" id="issuePost")

	.gridcontainer
		.gridwrapper
			.gridbox.gridmenu(data-spy="affix" )		
				#wrapper(class="pro_info")
					section#main
						div
							span.avatar 
								img(src='./uploads/'+'#{avatar}', alt='', width='50%' style="border-radius:50%")
							h1 #{name} 
							p
								blockquote(style="color:#369a21;")
									| #{moto}
							ul
								li#iRD
									| Issues Raised
									h3 #{num_of_issues}

								li(style="display: inline-block;padding: 0 10px")
									| Supporters
									h3 #{supporters}



			.gridbox.gridmain
				ul(id="issues")
					if issues
						for each in issues	
							li.issuePart
								.issuePart1D
									if (each.anonymity==="on")
										span(style='font-weight:900') Anonymous
									else if(each.anonymity==="off")
										a(href="/profile/"+each.username id="linkProfile" style='font-weight:900;color:#2d283e ') #{each.name}
									
									span(style='color:gray')  
										i.glyphicon.glyphicon-play(style="font-size:10pt")  
										|  #{each.department}
									
									div(style="float:right !important")
										if trending
											i.glyphicon.glyphicon-fire(style="color:red;margin:5px" aria-hidden='true')
											
										if (each.status==="open")
											i(class="mega-octicon octicon-issue-opened" )
												span Open
										else
											i(class="mega-octicon octicon-issue-closed")
										a(href="#" data-toggle="popover" title="Popover Header" data-content="Some content inside the popover")
											i(class="fa fa-ellipsis-h")

									p(id="date") #{each.datePosted}
			
								.main.issueBlock
									#nextBtn
										a#issueTopic(href="/post/"+each._id) #{each.issueTopic}
										#issueDesc #{each.issueDesc}
								
								.issueCommentPart
									button(id="likeBtn") 
										i(class="fa fa-thumbs-o-up" style="font-size:18px")
										|  Like		
									button(id="commentBtn")
										i(class="mega-octicon octicon-comment" style="font-size:18px")
										|  Comment	

			.gridbox.gridright(data-spy="affix" )
				.right
					#notifications
						h4 What?
						p The Pulpit Rock is a part of a mountain that looks like a pulpit.
					
					
	if user
		#addIssue
			img(src="/images/add.png" )
						
